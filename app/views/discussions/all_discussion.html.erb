<p id="notice"><%= notice %></p>

<%= form_for discussions_path, method: :get do |f| %>
    <%= text_field_tag :q , params[:q] %>
    <%= submit_tag "Go" %> 
    <% end %>
<table>
  <thead>
    <tr>
    <th>Author</th>
      <th>Description</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discussion| %>
      <tr>
      <td><%= link_to "#{User.find(discussion.user_id).name}" ,{:controller=>'discussions',:action=>'user_post',:id=>discussion.user_id},:method=>:post %></td>
        <td><%= discussion.description %></td>
        <td><%= discussion.topic %></td>
        <td><%= link_to 'Show', discussion %></td>
      </tr>
    <% end %>
  </tbody>
</table>

